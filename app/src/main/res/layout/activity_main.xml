<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rsb_mode="single"
        app:rsb_thumb_drawable="@drawable/thumb_activated"
        app:rsb_thumb_inactivated_drawable="@drawable/thumb_inactivated" />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:rsb_indicator_height="20dp"
        app:rsb_indicator_radius="8dp"
        app:rsb_indicator_show_mode="alwaysShow"
        app:rsb_indicator_text_size="12sp"
        app:rsb_indicator_width="80dp"
        app:rsb_indicator_background_color="@color/colorRed"
        app:rsb_mode="single"
        app:rsb_progress_color="@color/colorRed"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_thumb_drawable="@drawable/thumb_driver"
        app:rsb_thumb_width="30dp"
        app:rsb_thumb_height="25dp"
        app:rsb_tick_mark_mode="number"
        app:rsb_tick_mark_text_array="@array/markArray" />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:rsb_indicator_drawable="@drawable/progress_hint_bg"
        app:rsb_indicator_height="40dp"
        app:rsb_indicator_padding_bottom="10dp"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_indicator_width="40dp"
        app:rsb_max="1"
        app:rsb_min="-1"
        app:rsb_mode="range"
        app:rsb_progress_color="@color/colorAccent"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_progress_height="4dp"
        app:rsb_thumb_drawable="@drawable/thumb_activated"
        app:rsb_thumb_height="20dp"
        app:rsb_thumb_inactivated_drawable="@drawable/thumb_inactivated"
        app:rsb_thumb_scale_ratio="1.2"
        app:rsb_thumb_width="20dp"
        app:rsb_tick_mark_mode="number"
        app:rsb_tick_mark_text_array="@array/markArray2"
        app:rsb_tick_mark_text_margin="17dp" />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:rsb_indicator_background_color="#a6c1ee"
        app:rsb_indicator_height="25dp"
        app:rsb_indicator_margin="3dp"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_indicator_width="80dp"
        app:rsb_max="100"
        app:rsb_min="-100"
        app:rsb_min_interval="60"
        app:rsb_mode="range"
        app:rsb_progress_color="#a6c1ee"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_progress_height="2dp"
        app:rsb_thumb_drawable="@drawable/thumb_gradient"
        app:rsb_thumb_height="20dp"
        app:rsb_thumb_scale_ratio="1.5"
        app:rsb_thumb_width="20dp"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_text_array="@array/negativeMarkArray"
        app:rsb_tick_mark_text_margin="17dp"
        app:rsb_tick_mark_text_size="16sp" />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rsb_indicator_height="25dp"
        app:rsb_indicator_margin="2dp"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_indicator_width="40dp"
        app:rsb_mode="single"
        app:rsb_thumb_drawable="@drawable/thumb_activated"
        app:rsb_thumb_height="22dp"
        app:rsb_thumb_inactivated_drawable="@drawable/thumb_inactivated"
        app:rsb_thumb_width="22dp" />

    <com.jaygoo.widget.StepRangeSeekBar
        android:id="@+id/seekbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:rsb_indicator_height="20dp"
        app:rsb_indicator_padding_left="10dp"
        app:rsb_indicator_padding_right="10dp"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_min_interval="25"
        app:rsb_mode="range"
        app:rsb_progress_color="@color/colorProgress"
        app:rsb_progress_default_color="@color/rsbColorThumbPressed"
        app:rsb_progress_height="4dp"
        app:rsb_progress_radius="0dp"
        app:rsb_steps="4"
        app:rsb_thumb_drawable="@drawable/thumb_yellow"
        app:rsb_thumb_height="20dp"
        app:rsb_thumb_width="20dp"
        app:rsb_tick_mark_gravity="center"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_text_array="@array/wordsArray"
        app:rsb_tick_mark_text_color="@color/colorProgress"
        app:rsb_tick_mark_text_margin="17dp" />

    <com.jaygoo.widget.StepRangeSeekBar
        android:id="@+id/seekbar6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:rsb_indicator_height="20dp"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_min_interval="50"
        app:rsb_progress_color="@color/colorAccent"
        app:rsb_progress_default_color="#f2f2f2"
        app:rsb_progress_height="5dp"
        app:rsb_step_color="@color/colorProgress"
        app:rsb_step_height="10dp"
        app:rsb_step_radius="5dp"
        app:rsb_step_width="10dp"
        app:rsb_steps="4"
        app:rsb_thumb_drawable="@drawable/thumb_default"
        app:rsb_thumb_height="32dp"
        app:rsb_thumb_scale_ratio="1.2"
        app:rsb_thumb_width="32dp"
        app:rsb_tick_mark_layout_gravity="bottom"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_text_array="@array/wordsArray"
        app:rsb_tick_mark_text_color="@color/colorProgress" />


    <com.jaygoo.widget.StepRangeSeekBar
        android:id="@+id/seekbar7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:rsb_mode="single"
        app:rsb_progress_color="@color/colorAccent"
        app:rsb_progress_default_color="#f2f2f2"
        app:rsb_progress_height="5dp"
        app:rsb_step_color="@color/colorProgress"
        app:rsb_step_height="12dp"
        app:rsb_step_width="8dp"
        app:rsb_steps="4"
        app:rsb_thumb_height="22dp"
        app:rsb_thumb_width="22dp" />
</LinearLayout>
